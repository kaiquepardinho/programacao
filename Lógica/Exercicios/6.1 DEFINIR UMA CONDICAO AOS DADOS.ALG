algoritmo "6.1 Definir uma condição aos dados"
var
   // Variaveis globais //
   // Não pode usar tipo caractere ou logico //
   A: Real
inicio
   // Comandos //
   Escreval ("Exemplo ()")
   Escreval ("")

   // Definir o valor da variavel //
   Escreval ("Escolha 1")
